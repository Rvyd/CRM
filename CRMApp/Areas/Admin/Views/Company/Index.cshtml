@model IEnumerable<Company>
<div class="text-center">

    <div class="display-3" style="color:#992441">Firmalar</div>
    <div class="d-flex justify-content-end my-3">
        <!--btn outline succes yeşil çizer üstüne gelince-->
        <a class="btn btn-outline-success" style="background-color:#992441; color: white" asp-action="Create">
            <i class="fa fa-plus"></i>
            Ekle
        </a>
    </div>

    <table class="table table-striped table-hover"> <!--satırlar arası gezerken renk olması-->
        <thead style="background-color: #e26e8b; color: white;"><!--Head kısmı-->
            <tr> <!--table row-->
                <th>ID</th>
                <th>Logo</th>
                <th>Adı</th>
                <th>İletişim Numarası</th>
                <th>Adresi</th>
                <th>Operansyonlar</th>


            </tr>
        </thead>
        <tbody>
            @foreach (Company company in Model)
            {
                <tr>
                    <td>@company.CompanyId</td>
                    <td>
                        <image class="border border-light rounded" src="/@company?.CompanyLogoUrl"
                            alt="/@company?.CompanyName" height="100" widt="100" />
                    </td>
                    <td>@company!.CompanyName</td>
                    <td>@company.CompanyPhone</td>
                    <td>@company.CompanyAddress</td>
                    <td>
                        <div class="btn-group">
                            <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                asp-action="Update" asp-route-id="@company.CompanyId">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                asp-action="Delete" asp-route-id="@company.CompanyId">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Daha fazla bilgi" class="btn btn-info"
                                href=@company.CompanyWebSite>
                                <i class="fa-solid fa-search"></i>

                            </a>

                        </div>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toogle="tooltip"]').tooltip()
        });
    </script>
}
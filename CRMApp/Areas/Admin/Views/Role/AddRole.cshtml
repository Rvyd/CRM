@using CRMApp.Areas.Admin.Models
@model RoleModelView
<head>
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzN7G70dxPp4XNAYG/++Q64KmZecqH7c5C2Njs" crossorigin="anonymous">

</head>

<div class="text-center mb-4">
    <h1 class="display-6" style="color:#992441">Role Ekleme</h1>
</div>

<form method="post" asp-action="AddRole" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
        <label for="roleName" class="form-label">Rol tanımı</label>
        <input asp-for="@Model.RoleName" class="form-control" id="roleName" placeholder="Rol ismi girin" />
    </div>
    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-danger" asp-action="Index">
            <i class="fas fa-arrow-left"></i>
            Geri
        </a>
        <button class="btn btn-danger" type="submit">
            <i class="fas fa-save"></i>
            Kaydet
        </button>
    </div>
</form>

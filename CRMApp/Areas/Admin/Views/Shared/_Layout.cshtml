<!DOCTYPE html>
<html>

<head>
    <title>CRM UYGULMASI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <!-- Add AdminLTE CSS and JS links -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">
    
    <link href="assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="assets/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/style.bundle.css" rel="stylesheet" type="text/css" />

</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars" style="color: #8a0606;"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa fa-home">
                            Home
                        </i>
                    </a>
                </li>
                <li class="nav-item">
                     <a class="nav-link" area-current="page" asp-area="Admin" asp-controller="Role" asp-action="Index">
                        <i class="fa-solid fa-fingerprint"></i>
                            Roller
                        </i>
                    </a>
                </li>
                <li class="nav-item">
                     <a class="nav-link" area-current="page" asp-area="Admin" asp-controller="User" asp-action="Index">
                        <i class="fa-solid fa-users"></i>
                            Kullanıcılar
                        </i>
                    </a>
                </li>
                
            </ul>
            
             <ul class="navbar-nav ml-auto">
                
                <li class="nav-item">
                    <a class="nav-link" area-current="page" asp-area="Admin" asp-controller="Dashboard"
                        asp-action="Index">
                        <i class="fa-solid fa-user-tie"></i>
                        Admin
                   </a>
                </li>
                <li class="navbar-item">
                     
                      <a class="nav-link"  href="/Home/Index">
                        <i class="fa-solid fa-user"></i>
                        Employee
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated) //kullanıcı girdiyse 
                {
                    <li class="nav-item">
                        <a class="nav-link" area-current="page" asp-area="" asp-controller="Account" asp-action="Login">
                            <i class="fa fa-sign-out"></i>
                            Çıkış
                        </a>
                        <span class="welcome-msg">Hoşgeldiniz, @User.Identity.Name</span>
                    </li>

                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" area-current="page" asp-area="" asp-controller="Account" asp-action="Login">

                            <i class="fa fa-sign-in"></i>
                            Giriş
                        </a>
                    </li>
                }

                </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color: rgba(145, 44, 69, 1)  ;">

            <a href="#" class="brand-link">
                <img src="/images/logo.PNG" height="70" width="150">
                <span class="brand-text font-weight-light"><br>Ado Yazılım ve Otomasyon<br> Sistemleri A.Ş.</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <nav class="mt-2">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                            data-accordion="false">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fa-solid fa-gauge mr-3 "></i>
                                    <p>
                                        Gösterge Paneli
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Company" asp-action="Index">
                                    <i class="fa-solid fa-building mr-3 "></i>
                                    <p>
                                        Firmalar
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a  class="nav-link" asp-controller="Talk" asp-action="Index">
                                    <i class="fa-solid fa-comments mr-3" ></i>
                                    <p>
                                        Görüşmeler
                                    </p>
                                </a>
                            </li>

                        </ul>
                    </nav>
                </nav>

            </div>

        </aside>


        <!--sayfa içeriğini kontrol ediyoruz-->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">

                            </ol>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <aside class="control-sidebar control-sidebar-dark">

        </aside>


        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline footer-links">
                <a href="https://www.adosoft.com.tr/" class="btn btn-icon btn-google me-5 "><i
                        class="fab fa-google fs-4"></i></a>
                <a href="https://www.instagram.com/adosoftyazilim/?hl=tr" class="btn btn-icon btn-instagram me-5 "><i
                        class="fab fa-instagram fs-4"></i></a>
                <strong>&copy; 2024</strong>
        </footer>

    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
     @await RenderSectionAsync("Scripts",required:false);

</body>

</html>
@model UserDtoForCreation
<div class="text-center mb-4">
    <h1 class="display-6" style="color:#992441">Kullanıcı oluştur</h1>
</div>
<form method="post" asp-action="Create">

    <div class="row">
        <div class="col-md-6">
            <div class="from-group my-3">
                <label asp-for="UserName">Ad</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="from-group my-3">
                <label asp-for="Email">Mail</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="from-group my-3">
                <label asp-for="PhoneNumber">İletişim numarası</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="from-group my-3">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-danger font-weight-bold px-9 py-4 my-3 mx-2" value="Oluştur"></input>
                    <a  asp-action="Index"class="btn btn-outline-danger font-weight-bold px-9 py-4 my-3 mx-2">İptal</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
               <div class="display-5" style="bold;color:#992441" >Roller</div>
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" name="Roles" value="@item" class="form-check-input" />
                        <label class="form-check-label">@item</label>
                    </div>
                }

            </div>
        </div>
    </div>
</form> 